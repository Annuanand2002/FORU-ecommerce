<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h4 class="my-3 pt-5" style="color: rgb(228, 178, 117);">Add Products</h4>
      <h6 class="my-3 pt-5" style="color: rgb(39, 38, 38); font-weight: 600;">Product Details</h6>

      <div class="form-box mb-5" style="border: 1px solid #ddd; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <form action="/admin/add-product" method="post" enctype="multipart/form-data" id="add-product-form">
          <div class="row" style="gap: 30px;">
            <div class="col-md-6">

              <input type="text" name="name" placeholder="Product Name" class="form-control mb-3">
              <div class="error-message"></div>

              <select name="category" class="form-control mb-3">
                <option value="" disabled selected>Select Category</option>
                {{#each categories}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
                <div class="error-message"></div>
              </select>

              <div class="form-group">
  <label for="sizes">Available Sizes and Quantities</label>
  {{#each availableSizes}}
    <div class="size-group">
      <label for="size-{{this}}">{{this}}</label>
      <input type="number" name="sizes[{{this}}]" id="size-{{this}}" class="form-control mb-3" placeholder="Quantity" min="0">
    </div>
  {{/each}}
</div>


              <input type="number" name="price" placeholder="Price" class="form-control mb-3 mt-3">
              <div class="error-message"></div>
            </div>


              <select name="gender" class="form-control mb-3">
                <option value="" disabled selected>Select Gender</option>
                <div class="error-message"></div>
                <option value="Men">Men</option>
                <option value="Women">Women</option>
                <option value="Girl">Girl</option>
                <option value="Boy">Boy</option>
              </select>


              <div style="margin-top: 10px;">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control mb-3" rows="4" placeholder="Enter product description"></textarea>
              </div>

              <label for="image" style="margin-top: 12px;">Images</label>
              <input type="file" name="images" class="form-control mb-3" multiple>

              <div style="margin-top: 15px;">
                <label for="additionalCategories">Additional Categories</label>
                <div id="additionalCategories" class="form-group d-flex flex-wrap" style="gap: 15px;">
                  <div>
                    <input type="checkbox" name="latestCollection" value="true" id="latestCollection">
                    <label for="latestCollection">Latest Collection</label>
                  </div>
                  <div>
                    <input type="checkbox" name="bestSeller" value="true" id="bestSeller">
                    <label for="bestSeller">Best Seller</label>
                  </div>
                </div>
              </div>

              <button type="submit" class="btn mt-4" style="background-color:rgb(228, 178, 117);color:white">Submit</button>
              <a href="/admin/products" class="btn mt-4" style="background-color:rgb(228, 178, 117);color:white">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


