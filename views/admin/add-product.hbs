<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h4 class="my-3 pt-5" style="color: rgb(228, 178, 117);">Add Products</h4>
      <h6 class="my-3 pt-5" style="color: rgb(39, 38, 38); font-weight: 600;">Product Details</h6>

      <div class="form-box mb-5" style="border: 1px solid #ddd; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">
          <div class="row" style="gap: 30px;">
            <div class="col-md-6">

              <input type="text" name="name" placeholder="Product Name" class="form-control mb-3" required>

              <select name="category" class="form-control mb-3" required>
                <option value="" disabled selected>Select Category</option>
                <option value="Top Wear">Top Wear</option>
                <option value="Bottom Wear">Bottom Wear</option>
              </select>

              <input type="number" name="price" placeholder="Price" class="form-control mb-3 mt-3" required>
            </div>

            <div class="col-md-6">

              <input type="number" name="piece" placeholder="Piece" class="form-control mb-3">

              <select name="gender" class="form-control mb-3" required>
                <option value="" disabled selected>Select Gender</option>
                <option value="Men">Men</option>
                <option value="Women">Women</option>
                <option value="Girl">Girl</option>
                <option value="Boy">Boy</option>
              </select>


              <label for="size">Sizes</label>
              <div id="size" class="form-group d-flex flex-wrap" style="gap: 15px;">
                <div>
                  <input type="checkbox" name="size[]" value="S" id="sizeS">
                  <label for="sizeS">S</label>
                </div>
                <div>
                  <input type="checkbox" name="size[]" value="M" id="sizeM">
                  <label for="sizeM">M</label>
                </div>
                <div>
                  <input type="checkbox" name="size[]" value="L" id="sizeL">
                  <label for="sizeL">L</label>
                </div>
                <div>
                  <input type="checkbox" name="size[]" value="XL" id="sizeXL">
                  <label for="sizeXL">XL</label>
                </div>
                <div>
                  <input type="checkbox" name="size[]" value="XXL" id="sizeXXL">
                  <label for="sizeXXL">XXL</label>
                </div>
              </div>

              <div style="margin-top: 10px;">
                <label for="description">Description</label>
<textarea name="description" id="description" class="form-control mb-3" rows="4" placeholder="Enter product description"></textarea>
              </div>

              <label for="image" style="margin-top: 12px;">Images</label>
              <input type="file" name="images" class="form-control mb-3" multiple>

              <button type="submit" class="btn mt-4" style="background-color:rgb(228, 178, 117);color:white">Submit</button>
              <a href="/admin/products" class="btn mt-4" style="background-color:rgb(228, 178, 117);color:white">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

