<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4 pt-5">
    <div>
       <h4 class="my-3" style="color: rgb(228, 178, 117)">Users</h4>
    </div>
    <div>
      <input type="text" class="form-control me-3" style="width: 300px; display: inline-block;" placeholder="Search Products" />
    </div>
  </div>
  <div class="table-responsive pt-3">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="text-center">No:</th>
          <th class="text-center">Name</th>
          <th class="text-center">Email</th>
          <th class="text-center">Mobile No</th>
          <th class="text-center">Country</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td class="text-center">{{@index}}</td>
          <td class="text-center">{{this.name}}</td>
          <td class="text-center">{{this.email}}</td>
          <td class="text-center">{{this.number}}</td>
          <td class="text-center">{{this.country}}</td>
          <td class="text-center">
            <button class="btn" style="background-color: rgb(228, 178, 117); color:white">View Details</button>
          </td>
          <td class="text-center">
            {{#if this.blocked}} 
              <form action="/user/unblock/{{this._id}}" method="POST">
                <button class="btn btn-sm" style="background-color: rgb(161, 221, 161); color:white">Unblock</button>
              </form>
            {{else}} <!-- If the user is not blocked, show Block button -->
              <form action="/user/block/{{this._id}}" method="POST">
                <button class="btn btn-sm" style="background-color: rgb(192, 108, 108); color:white">Block</button>
              </form>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>