<section class="vh-100" style="background-color: #c9c9c9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                {{#if message}}
                <div class="alert alert-warning" role="alert">
                  {{message}}
                </div>
                {{/if}}
                <form id="loginForm" action="/login" method="POST">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0" style="font-family: 'Piedra', cursive; color: #854C4C !important;">FORU</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login into your account</h5>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="email">Email address</label>
                    <input id="email" class="form-control form-control-lg" name="email"/>
                    <span class="error-message" id="emailError" style="color: red;"></span>
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="password">Password</label>
                    <input
                     type="password"
                     id="password"
                     name="password"
                     class="form-control form-control-lg"name="password"
                     style="padding-right: 40px;"/>
                     <i
                     class="fa-solid fa-eye"
                     id="togglePassword"
                     style="
                     position: absolute;
                     right: 60px;
                     top: 60%;
                     transform: translateY(-50%);
                     cursor: pointer;
                     color:rgb(125, 122, 122)
                     "></i>
                    <span class="error-message" id="passwordError" style="color: red;"></span>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                    <a href="/auth/google" class="btn" style="border: 1px solid rgb(8, 8, 13); margin-left:30px">
                  <i class="fa-brands fa-google"></i> 
                  Login with Google
                  </a>
                  </div>
                  <div>
                    <a class="small text-muted" href="/forgot-password">Forgot password?</a>
                    <a class="small text-muted" href="/register" style="margin-left: 50px;">New user? Register here!</a>
                  </div>
                  
                  
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/javascripts/login.js"></script>
