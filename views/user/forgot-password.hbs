<section class="vh-100" style="background-color: #c9c9c9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="forgot password form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form action="/forgot-password" method="POST">
                  <h5 class="fw-normal mb-3 pb-3">Enter your email to reset your password</h5>

                  <div class="form-outline mb-4">
                    <input class="form-control form-control-lg" name="email"/>
                    <label class="form-label" for="email">Email address</label>
                    {{#if error}}
                      <span class="error-message" style="color: red;">{{error}}</span>
                    {{/if}}
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Send Reset Link</button>
                  </div>

                  <!-- Success Message -->
                  {{#if successMessage}}
                    <script type="text/javascript">
                      alert('{{successMessage}}');
                    </script>
                  {{/if}}

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</section>



