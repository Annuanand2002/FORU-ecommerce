<body>
    <div class="container">
        <div class="account-page">
    <div class="sidebar">
        <div class="sidebar-header">
            Account
        </div>
        <ul class="sidebar-menu">
            
            <li class="sidebar-menu-item ">
                <a href="/account">Profile</a>
            </li>
            <li class="sidebar-menu-item ">
                <a href="/orders">Orders & Returns</a>
            </li>
            <li class="sidebar-menu-item active">
                <a href="/address">Addresses</a>
            </li>
            <li class="sidebar-menu-item">
                <a href="/delete-account">Delete Account</a>
            </li>    
        </ul>
    </div>

        <div class="main-content">
            <div><h2>Add new Address</h2></div>
            <div class="add-address">
                <form id="add-address-form" method="post" action="add-address">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <div class="change-mobile">
                            <input type="text" id="name" name="name"/>
                            <span id="nameError" style="color: red; display: none;"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone">Mobile number</label>
                        <input type="tel" id="phone" name="phone"/>
                        <span id="phoneError" style="color: red; display: none;"></span>
                    </div>

                    <div class="form-group">
                        <label for="house">House name</label>
                        <input type="text" id="house" name="house"/>
                        <span id="houseError" style="color: red; display: none;"></span>
                    </div>
                    <div class="form-group">
                        <label for="postalCode">Pincode</label>
                        <input type="tel" id="postalCode" name="postalCode"/>
                        <span id="postalError" style="color: red; display: none;"></span>
                    </div>

                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" id="city" name="city"/>
                        <span id="cityError" style="color: red; display: none;"></span>
                    </div>
                    <div class="form-group">
                        <label for="state">State</label>
                        <input type="text" id="state" name="state"/>
                        <span id="stateError" style="color: red; display: none;"></span>
                    </div>

                    <div class="save-details">
                        <button type="submit">SAVE DETAILS</button>
                    </div>
                </form>

                <div class="save-details">
                    <a href="/account" style="margin-left: 10px;"><button>Cancel</button></a>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('add-address-form').addEventListener('submit', function(event) {
            // Clear all previous errors
            const errors = document.querySelectorAll('.form-group span');
            errors.forEach(error => error.style.display = 'none');

            let isValid = true;

            // Validate Name
            const name = document.getElementById('name').value;
            if (!name) {
                document.getElementById('nameError').textContent = "Name is required.";
                document.getElementById('nameError').style.display = 'block';
                isValid = false;
            }

            // Validate Phone Number (must be 10 digits starting with 9)
            const phone = document.getElementById('phone').value;
            const phonePattern = /^[9][0-9]{9}$/;
            if (!phone || !phone.match(phonePattern)) {
                document.getElementById('phoneError').textContent = "Phone number should be 10 digits and start with 9.";
                document.getElementById('phoneError').style.display = 'block';
                isValid = false;
            }

            // Validate House Name
            const house = document.getElementById('house').value;
            if (!house) {
                document.getElementById('houseError').textContent = "House name is required.";
                document.getElementById('houseError').style.display = 'block';
                isValid = false;
            }

            // Validate Postal Code (must be 6 digits starting with 6)
            const postalCode = document.getElementById('postalCode').value;
            const postalPattern = /^[6][0-9]{5}$/;
            if (!postalCode || !postalCode.match(postalPattern)) {
                document.getElementById('postalError').textContent = "Pincode should be 6 digits starting with 6.";
                document.getElementById('postalError').style.display = 'block';
                isValid = false;
            }

            // Validate City
            const city = document.getElementById('city').value;
            if (!city) {
                document.getElementById('cityError').textContent = "City is required.";
                document.getElementById('cityError').style.display = 'block';
                isValid = false;
            }

            // Validate State
            const state = document.getElementById('state').value;
            if (!state) {
                document.getElementById('stateError').textContent = "State is required.";
                document.getElementById('stateError').style.display = 'block';
                isValid = false;
            }

            // If any validation failed, prevent form submission
            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>
</body>
