<body>
    <div class="container">
        <div class="account-page">
    <div class="sidebar">
        <div class="sidebar-header">
            Account
        </div>
        <ul class="sidebar-menu">
            
            <li class="sidebar-menu-item active">
                <a href="/account">Profile</a>
            </li>
            <li class="sidebar-menu-item ">
                <a href="/orders">Orders & Returns</a>
            </li>
            <li class="sidebar-menu-item ">
                <a href="/address">Addresses</a>
            </li>
            <li class="sidebar-menu-item">
                <a href="/delete-account">Delete Account</a>
            </li>    
        </ul>
    </div>
     <div class="main-content">
            <div><h2>Edit Details</h2></div>
            <div class="edit-details">
    
                <form id="edit-details-form" method="post" action="edit-profile">
                    <div class="form-group">
                        <label for="mobile-number">Mobile Number</label>
                        <div class="change-mobile">
                            <input type="tel" id="mobile-number" name="phone" value="{{user.phone}}"/>
                            <span id="mobile-number-error" style="color: red; display: none;"></span>
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="full-name">Full Name</label>
                        <input type="text" id="full-name" name="name" value="{{user.name}}"/>
                        <span id="full-name-error" style="color: red; display: none;"></span>
                    </div>
    
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="{{user.email}}"/>
                        <span id="email-error" style="color: red; display: none;"></span>
                    </div>
   <div>
    <input type="radio" name="gender" value="Male" id="male" /> Male
    <input type="radio" name="gender" value="Female" id="female" /> Female
    <span id="gender-error" style="color: red; display: none;"></span> <!-- Error message for gender -->
</div>



    
                    <div class="form-group">
                        <label for="dob">Birthday (dd/mm/yyyy)</label>
                        <input type="date" id="dob" name="dateOfBirth" value="user.dateOfBirth"/>
                        <span id="dob-error" style="color: red; display: none;"></span>
                    </div>
    
                    <div class="save-details">
                        <button type="submit">SAVE DETAILS</button>
                    </div>
                     </form>
                        <div class="save-details">
                          <a href="/account" style="margin-left: 10px;"><button>Cancel</button></a>
                        </div>
                        
                    
               
            </div>
        </div>
        </div>
    
       
    </div>
    

    <script>
        const form = document.getElementById('edit-details-form');
    
        // Utility function to display error messages
        const errorMessage = (id, message) => {
            const element = document.getElementById(`${id}-error`);
            if (message) {
                element.textContent = message;
                element.style.display = 'block';
            } else {
                element.style.display = 'none';
            }
        };
    
        // Validation functions
        const validateMobile = (mobile, id) => {
            const mobileRegex = /^[6-9]\d{9}$/; // Starts with 6-9 and has 10 digits
            if (!mobileRegex.test(mobile)) {
                errorMessage(id, 'Enter a valid 10-digit mobile number starting with 6-9.');
                return false;
            }
            errorMessage(id, '');
            return true;
        };
    
        const validateFullName = (name, id) => {
            if (name.length < 3 || !/^[a-zA-Z\s]+$/.test(name)) {
                errorMessage(id, 'Full name must be at least 3 characters and contain only letters and spaces.');
                return false;
            }
            errorMessage(id, '');
            return true;
        };
    
        const validateEmail = (email, id) => {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                errorMessage(id, 'Enter a valid email address.');
                return false;
            }
            errorMessage(id, '');
            return true;
        };
    
        const validateGender = () => {
            const gender = document.querySelector('input[name="gender"]:checked');
            if (!gender) {
                errorMessage('gender', 'Please select your gender.');
                return false;
            }
            errorMessage('gender', '');
            return true;
        };
    
        const validateDOB = (dob, id) => {
            const today = new Date().toISOString().split('T')[0];
            const ageLimit = new Date().getFullYear() - 18; // Minimum age of 18
            const dobYear = new Date(dob).getFullYear();
            if (dob === '' || dob > today || dobYear > ageLimit) {
                errorMessage(id, 'Enter a valid date of birth. You must be at least 18 years old.');
                return false;
            }
            errorMessage(id, '');
            return true;
        };
    
 
    
        // Event listeners for real-time validation
        document.getElementById('mobile-number').addEventListener('input', (e) => {
            validateMobile(e.target.value.trim(), 'mobile-number');
        });
    
        document.getElementById('full-name').addEventListener('input', (e) => {
            validateFullName(e.target.value.trim(), 'full-name');
        });
    
        document.getElementById('email').addEventListener('input', (e) => {
            validateEmail(e.target.value.trim(), 'email');
        });
    
        document.getElementById('dob').addEventListener('change', (e) => {
            validateDOB(e.target.value.trim(), 'dob');
        });
        document.querySelectorAll('input[name="gender"]').forEach((radio) => {
            radio.addEventListener('change', validateGender);
        });
    
       form.addEventListener('submit', function (e) {
    e.preventDefault(); // Prevent form submission

    const isMobileValid = validateMobile(document.getElementById('mobile-number').value.trim(), 'mobile-number');
    const isFullNameValid = validateFullName(document.getElementById('full-name').value.trim(), 'full-name');
    const isEmailValid = validateEmail(document.getElementById('email').value.trim(), 'email');
    const isGenderValid = validateGender();
    const isDOBValid = validateDOB(document.getElementById('dob').value.trim(), 'dob');

    if (isMobileValid && isFullNameValid && isEmailValid && isGenderValid && isDOBValid) {
        // If validation passes, submit the form data to the server
        form.submit(); // This submits the form
    }
});

    </script>
</body>
