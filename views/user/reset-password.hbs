<section class="vh-100" style="background-color: #c9c9c9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="reset password form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form id="resetPasswordForm" action="/reset-password" method="POST">
                  <h5 class="fw-normal mb-3 pb-3">Enter your new password</h5>

                  <div class="form-outline mb-4">
                    <input type="password" class="form-control form-control-lg" name="password" id="password"/>
                    <i class="fa-solid fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                    <label class="form-label" for="password">New Password</label>
                    <span class="error-message" id="passwordError" style="color: red;"></span>
                  </div>

                  <input type="hidden" name="token" value="{{token}}"/>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Reset Password</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
