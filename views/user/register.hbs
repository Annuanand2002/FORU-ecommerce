<section class="vh-100" style="background-color: #c9c9c9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form id="registerForm" action="/register" method="POST">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0" style="font-family: 'Piedra', cursive; color: #854C4C !important;">FORU</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hello! Register here and experience the feel of shopping</h5>
                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="text" id="name" class="form-control form-control-lg" name="name" placeholder="First and last name"/>
                    <label class="form-label" for="name">Name*</label>
                    <span class="error-message" id="nameError" style="color: red;"></span>
                  </div>

                  
                <div data-mdb-input-init class="form-outline mb-4">
                 <input 
                  type="text" 
                  id="phone" 
                  class="form-control form-control-lg" 
                  name="phone" 
                  placeholder="Phone number" />
                <label class="form-label" for="phone">Phone number*</label>
                <span class="error-message" id="phoneError" style="color: red;"></span>
                </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input  id="email" class="form-control form-control-lg" name="email" placeholder="Email address"/>
                    <label class="form-label" for="email">Email address</label>
                    <span class="error-message" id="emailError" style="color: red;"></span>
                  </div>


                  
                   <div data-mdb-input-init class="form-outline mb-4">
                     <input type="password" id="password" class="form-control form-control-lg" name="password" placeholder="At least 6 characters" />
                     <i class="fa-solid fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                     <label class="form-label" for="password">Password*</label>
                    <span class="error-message" id="passwordError" style="color: red;"></span>
                    </div>

                  <div class="pt-1 mb-4">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit" id="registerButton">Sign Up</button>
                    <a class="small text-muted" href="/login" style="margin-left: 150px; ">Already have an account?</a>
                    <a href="/auth/google" class="btn" style="border: 1px solid rgb(8, 8, 13); margin-left:250px">
                    <i class="fa-brands fa-google"></i> 
                    Signin with Google
                    </a>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

